generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User profile (linked to Supabase Auth)
model User {
  id        String   @id // Supabase auth user ID
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Anonymous alias system
  aliasType  AliasType?
  aliasYears Int?

  votes    Vote[]
  comments Comment[]
}

enum AliasType {
  PA_RESIDENT
  COLLEGE_STUDENT
  POLI_SCI_WORKER
  GOVT_WORKER
  JOURNALIST
  EDUCATOR
  HEALTHCARE
  OTHER
}

// Raw articles from RSS feeds (before processing)
model RawArticle {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())

  // Source info
  sourceUrl   String   @unique // Dedupe by URL
  sourceName  String
  sourceTitle String
  sourceContent String? // Full text if available
  publishedAt DateTime?

  // Processing status
  status      ProcessingStatus @default(PENDING)
  relevanceScore Float?        // 0-1 score from ML
  processedAt DateTime?
  errorMessage String?

  // Link to processed article if approved
  articleId   String?  @unique
  article     Article? @relation(fields: [articleId], references: [id])
}

enum ProcessingStatus {
  PENDING      // Waiting to be processed
  PROCESSING   // Currently being analyzed
  APPROVED     // Relevant, will be summarized
  REJECTED     // Not relevant enough
  SUMMARIZED   // Summarized and published
  ERROR        // Processing failed
}

// Processed articles (shown to users)
model Article {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  publishedAt DateTime @default(now())

  // AI-generated content
  title         String  // Concise title
  whoShouldCare String  // "PA voters", "Pittsburgh residents", etc.
  summary       String  // 2-3 sentence summary
  impact        String  // Brief impact statement

  // Source metadata
  sourceUrl  String?
  sourceName String?
  category   String?  // Education, Healthcare, Elections, etc.
  region     String?  // Philadelphia, Pittsburgh, Statewide, etc.

  // Status
  isActive Boolean @default(true)

  // Relations
  rawArticle RawArticle?
  votes      Vote[]
  comments   Comment[]

  @@index([publishedAt(sort: Desc)])
  @@index([region])
  @@index([category])
}

model Vote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  voteType VoteType

  userId    String
  articleId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@unique([userId, articleId])
}

enum VoteType {
  APPROVE
  DISAPPROVE
  NEUTRAL
}

model Comment {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  content String

  userId    String
  articleId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@index([articleId, createdAt])
}

// RSS feed sources
model FeedSource {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String   // "Philadelphia Inquirer"
  url       String   @unique // RSS feed URL
  region    String?  // Default region for articles
  category  String?  // Default category
  isActive  Boolean  @default(true)
  lastFetchedAt DateTime?
}
