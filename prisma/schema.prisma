generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User profile (linked to Supabase Auth)
model User {
  id        String   @id // Supabase auth user ID
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Anonymous alias system (stored as string for SQLite)
  aliasType  String?  // PA_RESIDENT, COLLEGE_STUDENT, etc.
  aliasYears Int?

  votes    Vote[]
  comments Comment[]
}

// Raw articles from RSS feeds (before processing)
model RawArticle {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())

  // Source info
  sourceUrl   String   @unique // Dedupe by URL
  sourceName  String
  sourceTitle String
  sourceContent String? // Full text if available
  publishedAt DateTime?

  // Processing status (stored as string for SQLite)
  status      String   @default("PENDING") // PENDING, PROCESSING, APPROVED, REJECTED, SUMMARIZED, ERROR
  relevanceScore Float?
  processedAt DateTime?
  errorMessage String?

  // Link to processed article if approved
  articleId   String?  @unique
  article     Article? @relation(fields: [articleId], references: [id])
}

// Processed articles (shown to users)
model Article {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  publishedAt DateTime @default(now())

  // AI-generated content
  title         String
  whoShouldCare String
  summary       String
  impact        String

  // Source metadata
  sourceUrl  String?
  sourceName String?
  category   String?
  region     String?

  // Status
  isActive Boolean @default(true)

  // Relations
  rawArticle RawArticle?
  votes      Vote[]
  comments   Comment[]
}

model Vote {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  voteType String // APPROVE, DISAPPROVE, NEUTRAL

  userId    String
  articleId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@unique([userId, articleId])
}

model Comment {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  content String

  userId    String
  articleId String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
}

// RSS feed sources
model FeedSource {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String
  url       String   @unique
  region    String?
  category  String?
  isActive  Boolean  @default(true)
  lastFetchedAt DateTime?
}
